<?xml version="1.0" encoding="UTF-8"?>
<database>

    <global>
        <table name="oauth_access_limits">
            <field type="VARCHAR(80) NOT NULL">client_id</field>
            <field type="VARCHAR(255) NOT NULL">scope</field>
            <field type="BIGINT NOT NULL DEFAULT 0">total_usage_count</field>
            <field type="BIGINT NOT NULL DEFAULT 0">interval_usage_count</field>
            <field type="INT(8) NOT NULL DEFAULT 0">first_usage</field>
            <field type="INT(8) NOT NULL DEFAULT 0">last_usage</field>

            <index>client_id</index>
        </table>
    </global>

</database>
